<li id="micropost-<%= micropost.id %>">
  <div class="row">
    <div class="col-12">
      <div class="thumbnail">
        <a class="thumbnail">
          <%= image_tag micropost.picture.url if micropost.picture?%>
        </a>
        <div class="caption">
          <h4>
            <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
          </h4>
          <h3><%= micropost.content.html_safe %></h4>
          <p>
            <%= t ".posted" %> <%= time_ago_in_words(micropost.created_at) %> <%= t ".ago" %>
            <% if current_user.current_user? micropost.user %>
               <%= link_to "", micropost, method: :delete, data: {confirm: t(".you_sure")},
                class: "btn btn-danger btn-custom fa fa-trash-o" %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</li>
