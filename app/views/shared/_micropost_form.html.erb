<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="input">
    <div class="input1">
    </div>
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png,jpg", id: "file", class: "img"%>
  </div>

  <%= f.text_area :content, minlength: Settings.micropost.max_text_area,
    required: true, class: "form-control ckeditor", id: "ckeditor"%>

  <%= f.submit t(".post"), class: "btn btn-primary" %>
<% end %>
